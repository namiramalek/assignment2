<% include ../partials/header.ejs%>


  <% include ../partials/main_nav.ejs %>

<!--Content for the Edit page-->
<div class="container">
    <div class="raw">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
            
            <div class="form-group">
                <label for="nameTextField"></label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Edit Business Contact Name"
                name="Contact_name"
                value="<%= contacts.Contact_name %>"
                 required>
            </div>

            <div class="form-group">
                <label for="numberTextField"></label>
                <input type="text" class="form-control"
                id="numberTextField"
                placeholder="Enter Business Contact Number"
                name="Contact_number"
                value="<%= contacts.Contact_number %>"
                required>
            </div>

            <div class="form-group">
                <label for="emailTextField"></label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter Business Contact Email"
                name="Email" 
                value="<%= contacts.Email %>"
                required>
            </div>

            <button class="btb btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit
            </button>

            <a href="/business-contact-list" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
    </div>
</div>



